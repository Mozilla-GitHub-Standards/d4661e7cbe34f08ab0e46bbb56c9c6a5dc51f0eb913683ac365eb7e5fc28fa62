{
  "name": "Mozilla Cookie Restrictions Breakage Study",
  "description": "A Mozilla study created to learn the positive and negative effects of blocking tracking cookies.",
  "version": "1.0.5",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "cookie-restrictions-breakage@shield.mozilla.org",
      "strict_min_version": "62.0"
    }
  },
  "icons": {
    "48": "icons/study-icon.svg",
    "96": "icons/study-icon.svg"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/study-icon.svg",
    "default_title": "test title",
    "default_popup": "popup/compatMode.html"
  },
  "experiment_apis": {
    "popupNotification": {
      "schema": "./privileged/popupNotification/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/popupNotification/api.js",
        "paths": [["popupNotification"]]
      }
    },
    "study": {
      "schema": "./privileged/study/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/study/api.js",
        "paths": [["study"]]
      }
    },
    "testingOverrides": {
      "schema": "./privileged/testingOverrides/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/testingOverrides/api.js",
        "paths": [["testingOverrides"]]
      }
    },
    "prefs": {
      "schema": "./privileged/prefs/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/prefs/api.js",
        "paths": [["prefs"]]
      }
    },
    "pageMonitor": {
      "schema": "./privileged/pageMonitor/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/pageMonitor/api.js",
        "paths": [["pageMonitor"]]
      }
    }
  },
  "web_accessible_resources": [
    "privileged/pageMonitor/framescript.js"
  ],
  "permissions": ["management", "storage", "alarms", "webNavigation", "tabs"],
  "background": {
    "scripts": ["variations.js", "studySetup.js", "feature.js", "background.js", "tabs.js"]
  }
}
